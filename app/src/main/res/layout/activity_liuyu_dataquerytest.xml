<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="活动列表"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="大类列表"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_typeAndActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="所有大类和对应的子活动"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="所有盒子和位置"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/all_boxAndContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="所有盒子和盒子内部的物品、物品数量"/>
    </LinearLayout>
    <Button
        android:id="@+id/insertTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"/>
    <Button
        android:id="@+id/friend_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友动态"/>
    <Button
        android:id="@+id/application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有好友申请"/>
    <Button
        android:id="@+id/allFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有好友"/>


</LinearLayout>