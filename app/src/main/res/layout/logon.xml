<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        app:layout_constraintStart_toStartOf="@+id/edit_zh"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/edit_zh"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入账号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView1"></EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="密码"

        app:layout_constraintStart_toStartOf="@+id/textView1"

        app:layout_constraintTop_toBottomOf="@+id/edit_zh"></TextView>

    <EditText
        android:id="@+id/edit_mm"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:hint="请输入密码"
        app:layout_constraintStart_toStartOf="@+id/edit_zh"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="密码"

        app:layout_constraintStart_toStartOf="@+id/textView1"

        app:layout_constraintTop_toBottomOf="@+id/edit_mm"></TextView>

    <EditText
        android:id="@+id/edit_qrmm"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:hint="请输入密码"
        app:layout_constraintStart_toStartOf="@+id/edit_zh"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></EditText>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyCheckBox"
        android:layout_marginTop="5dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintStart_toStartOf="@+id/edit_zh"
        app:layout_constraintTop_toBottomOf="@+id/edit_qrmm"></CheckBox>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"

        android:layout_marginTop="5dp"
        android:text="我同意"
        app:layout_constraintStart_toEndOf="@id/checkBox"
        app:layout_constraintTop_toTopOf="@+id/checkBox"></TextView>
    <TextView
        android:id="@+id/text_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:textColor="@color/colorPrimaryDark"

        android:layout_marginTop="5dp"
        android:text="使用协议"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toTopOf="@+id/checkBox"></TextView>

    <Button
        android:id="@+id/button_logon_confirm"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_fillet"
        android:backgroundTint="@color/colorDark"
        android:onClick="click"

        android:text="注册"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_agree"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>